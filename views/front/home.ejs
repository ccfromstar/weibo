                var minpage = 0;
                var maxpage = 10;
                if((totalpage+1)>10){
                  minpage = page - 5;
                  maxpage = page + 5;
                }
                if(page - 5 < 1){
                  maxpage = maxpage - page + 5;
                }
                if(page + 5 > (totalpage+1)){
                  minpage = minpage - (page + 5) + (totalpage +1);
                }
